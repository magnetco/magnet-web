# Groq API key for AI generation
GROQ_API_KEY=gsk_...

# Neon PostgreSQL connection string (same as website)
DATABASE_URL=postgresql://...

# Password hash (generate with: node -e "const bcrypt=require('bcryptjs');bcrypt.hash('yourpassword',10).then(console.log)")
AUTH_PASSWORD_HASH=$2a$10$...

# Random 32+ character string for cookie signing (optional, not currently used)
AUTH_SECRET=...

# Relative path to context files (defaults to ../context)
CONTEXT_DIR=../context

# Public URL for share links (for production)
NEXT_PUBLIC_URL=http://localhost:5010
